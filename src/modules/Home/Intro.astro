---
import { socials } from "@/data/footer";
import Icon from "@/elements/Icon.astro";
---

<div class="home intro component">
  <div class="left">
    <p class="heading">Embark on a Stellar Trading Experience</p>

    <div class="socials">
      {
        socials.map((social) => (
          <a href={social.link} target="_blank" rel="noopener noreferrer">
            <Icon variant={social.iconDark} size="xl" />
          </a>
        ))
      }
    </div>
  </div>

  <div class="right">
    <p>
      We embedded the most effective Decentralized Finance (DeFi) insurance
      coverage solution into our platform.
    </p>

    <a
      class="launch"
      href="https://test.stationdex.com"
      target="_blank"
      rel="noopener noreferrer">Launch Testnet</a
    >
  </div>
</div>
