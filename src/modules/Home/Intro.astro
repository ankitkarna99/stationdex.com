---
import { socials } from "@/data/footer";
import Icon from "@/elements/Icon.astro";
---

<div class="home intro component">
  <div class="left">
    <p class="heading">All Your Funds Covered with Inbuilt Insurance</p>

    <div class="socials">
      {
        socials.map((social) => (
          <a href={social.link} target="_blank" rel="noopener noreferrer">
            <Icon variant={social.iconDark} size="xl" />
          </a>
        ))
      }
    </div>
  </div>

  <div class="right">
    <p>
      We are the first DEX to integrate a DeFi insurance cover solution for
      added security and protection of funds.
    </p>

    <button> Trade Now</button>
  </div>
</div>
