---
import BaseLayout from "../layouts/BaseLayout.astro";
import Seo from "../components/Seo.astro";

import Intro from "@/modules/Home/Intro.astro";
import Hero from "@/components/Hero/Hero.astro";
import Brands from "@/modules/Home/Brands.astro";
import Secure from "@/modules/Home/Secure.astro";
import Features from "@/modules/Home/Features.astro";

import styles from "./index.scss?inline";
import "@fontsource/work-sans";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="StationDEX"
    description="Embark on a Stellar Trading Experience"
    og={{
      image: "/assets/og/home.png",
      imageAlt: "StationDEX Open Graph Banner",
    }}
  />

  <Intro />

  <Hero
    intro="Most Trusted DEX for"
    title={[{ text: "Swapping", highlight: true }, { text: " Crypto" }]}
    description="We have an unwavering focus on security, transparent operations, and a user-centric approach."
  />

  <Brands />

  <Secure />

  <Features />

  <style slot="header" is:inline set:html={styles}></style>

  <Fragment slot="footer">
    <script src="@/scripts/newsletter/index.js"></script>
    <script src="@/scripts/header/nav.js"></script>
    <script src="@/scripts/home/slider.js"></script>
  </Fragment>
</BaseLayout>
