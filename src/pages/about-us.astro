---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Seo from "@/components/Seo.astro";

import WhyWeCreated from "@/modules/About/WhyWeCreated.astro";

import styles from "./about-us.scss?inline";
import "@fontsource/work-sans";
---

<BaseLayout noFooterNewsletter>
  <Seo
    slot="seo"
    title="Decentralized Insurance Protocol / Neptune Mutual"
    description="Need Crypto Insurance? You don't need to submit loss proof to receive payouts. No need to wait after creating a claim. Get a free price quote now."
    og={{
      image: "/assets/images/meta/og/home.png",
      imageAlt: "Neptune Mutual Open Graph Banner",
    }}
  />

  <WhyWeCreated />

  <style slot="header" is:inline set:html={styles}></style>

  <Fragment slot="footer">
    <script src="@/scripts/header/nav.js"></script>
  </Fragment>
</BaseLayout>
